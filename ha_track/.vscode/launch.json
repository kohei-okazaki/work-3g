{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "サーバ起動",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}\\manage.py",
      "args": ["runserver", "127.0.0.1:8086"],
      "django": true,
      "autoStartBrowser": false,
      "console": "integratedTerminal"
    },
    {
      "name": "Mirgateファイル作成",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}\\manage.py",
      "args": ["makemigrations"],
      "django": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Mirgate実行",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}\\manage.py",
      "args": ["migrate"],
      "django": true,
      "console": "integratedTerminal"
    }
  ]
}
